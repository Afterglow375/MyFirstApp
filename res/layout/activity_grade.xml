<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/list_view_gradient"
    android:padding="8dp"
    android:layout_gravity="center" > 
    
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/grade"
        android:padding="5dp"
        android:text="@string/weight"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:padding="5dp"
        android:text="@string/grade"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/name"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete"
        android:contentDescription="@string/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/save"
        android:contentDescription="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_menu_save" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:ems="10"
        android:inputType="textPersonName" 
        android:textColor="#000000"
        android:textSize="16sp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editGrade"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/grade"
        android:layout_alignRight="@+id/editName"
        android:layout_toRightOf="@+id/grade"
        android:ems="10"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/editGrade"
        android:layout_alignTop="@+id/weight"
        android:layout_toRightOf="@+id/weight"
        android:ems="10"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>