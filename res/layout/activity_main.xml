
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/main_activity"
 	>

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/computeGrade"
            android:stackFromBottom="false"
            android:padding="20dp" >

    	</ListView>
    	
       <ImageButton
            android:id="@+id/addGrade"
            android:contentDescription="@string/add_grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/editGradeScale"
            android:layout_toLeftOf="@+id/editGradeScale"
            android:src="@android:drawable/ic_menu_add" />

        <TextView
            android:id="@+id/currentGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/addGrade"
            android:layout_toLeftOf="@+id/addGrade"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/curr_grade"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/editGradeScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/computeGrade"
            android:contentDescription="@string/gradescale"
            android:src="@android:drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/computeGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/compute_grade"
            android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>